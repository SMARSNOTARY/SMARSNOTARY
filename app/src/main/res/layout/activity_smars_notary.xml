<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f0714"
    tools:context="com.example.sandynasandaire.smarsnotary.SmarsNotaryActivity">


    <ImageView
        android:id="@+id/Ivsplash"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignTop="@+id/login_progress"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logonotaire2" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Ivsplash"
        android:layout_marginTop="34dp"
        android:fontFamily="serif"
        android:text="Enregistrer en tant que :"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Ivsplash"
        android:layout_marginTop="154dp"
        android:background="@android:color/white"
        android:text="Notaire"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="28dp"
        android:background="@android:color/white"
        android:text="Client"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />
</RelativeLayout>
