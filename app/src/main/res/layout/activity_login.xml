<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.smarsnotary.notepeyim.smarsnotary.LoginActivity">


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo_new" />

        <EditText
            android:paddingStart="5dp"
            android:fontFamily="serif"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/email"
            android:digits="1234567890+"
            android:inputType="number"
            android:drawableLeft="@drawable/ic_avatar"
            android:drawableStart="@drawable/ic_avatar"
            android:layout_margin="10dp"
            android:background="@drawable/edtlogin"
            android:hint="@string/t_l_phone"/>

        <EditText
            android:paddingStart="5dp"
            android:fontFamily="serif"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/password"
            android:layout_margin="10dp"
            android:background="@drawable/edtlogin"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableStart="@drawable/ic_lock"
            android:inputType="textPassword"
            android:hint="@string/mot_de_passe"
            />

        <Button
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:background="@color/secondaryDarkColor"
            android:shadowColor="@color/colorPrimary"
            android:padding="10dp"
            android:text="@string/se_connecter"
            android:id="@+id/email_sign_in_button"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tvForgetPass"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:text="@string/mot_de_passe_oubli"
            android:gravity="center"
            />

        <Button
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:text="@string/cr_er_compte"
            android:background="@color/secondaryDarkColor"
            android:shadowColor="@color/colorPrimary"
            android:padding="5dp"
            android:id="@+id/signup"
            android:layout_height="wrap_content"
            android:layout_margin="12dp" />

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/propos"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>