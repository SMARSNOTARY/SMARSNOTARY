<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f0714"
    tools:context="com.example.sandynasandaire.smarsnotary.LoginActivity">


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logonotaire2" />

        <EditText
            android:paddingStart="5dp"
            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/email"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:layout_margin="5dp"
            android:background="@drawable/edtlogin"
            android:hint=" Nom utilisateur"/>

        <EditText
            android:paddingStart="5dp"
            android:fontFamily="serif"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/password"
            android:layout_marginBottom="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/edtlogin"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:inputType="textPassword"
            android:hint=" Mot de passe"
            />

        <Button
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:text="Se Connecter"
            android:id="@+id/email_sign_in_button"
            android:layout_height="wrap_content"
            />




        <TextView
            android:id="@+id/tvForgetPass"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="Mot de passe Oublié"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvRegiste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Ou"
            android:gravity="center"
            android:layout_marginTop="5dp"/>





    </LinearLayout>

    <Button
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_width="300dp"
        android:text="Créer Compte"
        android:id="@+id/signup"
        android:layout_height="wrap_content"

        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_weight="2"
        android:text="A Propos"
        android:textAlignment="center"
        android:textStyle="bold" />



</RelativeLayout>