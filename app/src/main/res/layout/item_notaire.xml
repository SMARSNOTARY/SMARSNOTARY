<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivNotaire"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="21dp"

        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvNomNotaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivNotaire"
        android:layout_below="@+id/ivNotaire"
        android:text="DOSSOUS Clermont"/>

    <TextView
        android:id="@+id/tvNomCommune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvNomNotaire"
        android:layout_below="@+id/tvNomNotaire"
        android:text="Commune" />

</RelativeLayout>